<resources>


    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="DatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
    </style>

    <style name="DatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="TimePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:timePickerStyle">@style/TimePickerStyle</item>
    </style>

    <style name="TimePickerStyle" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

</resources>
